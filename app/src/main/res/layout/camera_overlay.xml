<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/camera_overlay_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/loading_indicator"
        style="@android:style/Widget.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <io.github.controlwear.virtual.joystick.android.JoystickView
        android:id="@+id/joystick"
        android:layout_width="@dimen/joystick_size"
        android:layout_height="@dimen/joystick_size"
        custom:JV_backgroundColor="#70acacac"
        custom:JV_borderColor="#73767676"
        custom:JV_borderWidth="4dp"
        custom:JV_buttonColor="#262626"
        custom:JV_buttonSizeRatio="30%"
        custom:JV_fixedCenter="false"
        android:layout_margin="@dimen/joystick_margin"
        android:layout_alignParentStart="true"/>
</RelativeLayout>